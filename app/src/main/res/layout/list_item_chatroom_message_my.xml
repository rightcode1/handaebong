<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="7dp">
    <LinearLayout
        android:id="@+id/layout_linedate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line"
            android:layout_weight="1"
            android:layout_marginRight="10dp"></TextView>

        <TextView
            android:id="@+id/txt_linedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대화목록"
            android:textColor="#797979"
            android:textSize="12sp"
            android:fontFamily="@font/notosanscjkkr_medium_cus"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"></TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/notosanscjkkr_medium_cus"
        android:layout_marginBottom="3dp"
        android:layout_gravity="right"
        android:visibility="gone"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오후 17:33"
            android:textColor="#d1d1d1"
            android:textSize="9sp"
            android:fontFamily="@font/notosansmonocjkkr_regular_cus"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"></TextView>
        <LinearLayout
            android:id="@+id/layout_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_chat_my"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layout_answer"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
               >
                <TextView
                    android:textIsSelectable="true"
                    android:id="@+id/txt_answer_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" testsdfsadf"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/notosanscjkkr_medium_cus"></TextView>
                <TextView
                    android:textIsSelectable="true"
                    android:id="@+id/txt_answer_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" testsdfsadf"
                    android:textColor="#4a4a4a"
                    android:textSize="10sp"
                    android:fontFamily="@font/notosanscjkkr_medium_cus"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:inputType="text"
                    android:maxLines="1"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"/>
            </LinearLayout>
            <TextView
                android:textIsSelectable="true"
                android:id="@+id/txt_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" testsdfsadf"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/notosansmonocjkkr_regular_cus"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>