<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txt_topline"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/gray_line"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카테고리명"
        android:textSize="20sp"
        android:fontFamily="@font/spoqahansans_bold_cus"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/img_badge"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/menu_best"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="메뉴명"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:fontFamily="@font/spoqahansans_bold_cus"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="메뉴 설명"
                android:textSize="12sp"
                android:fontFamily="@font/spoqahansans_regular_cus"
                android:textColor="#6C6C6C"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가격"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/layout_thumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/img_thumb"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/border_thumb" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"/>
</LinearLayout>