<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="채팅을 이용하시려면 닉네임이 필요합니다!"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/notosanscjkkr_medium_cus"
            android:gravity="center"
            android:maxLines="1"
            android:layout_marginBottom="20dp"></TextView>
        <LinearLayout
            android:id="@+id/layout_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <EditText
                android:id="@+id/edit_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:hint="닉네임을 입력해주세요."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/spoqahansans_regular_cus"
                android:background="@null"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/txt_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이미 사용하고 있는 닉네임입니다."
                android:textColor="#fe4e4d"
                android:textSize="9sp"
                android:fontFamily="@font/notosanscjkkr_medium_cus"
                android:maxLines="1"
                android:layout_marginBottom="10dp"
                android:visibility="gone"></TextView>
            <ImageView
                android:id="@+id/img_nick_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dialog_nick_check"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/img_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_dialog_cancel"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:layout_marginRight="5dp"/>
            <ImageView
                android:id="@+id/img_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_dialog_input"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
