<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_main_title" />

                <ImageView
                    android:id="@+id/img_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:padding="15dp"
                    android:src="@drawable/main_menu" />
                <ImageView
                    android:id="@+id/img_like"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:padding="10dp"
                    android:src="@drawable/like_off" />
            </RelativeLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.handaebong.handaebong.Ulitility.ViewPager_Wrap
                        android:id="@+id/viewpage_event"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                     >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/border_search"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_search"
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/home_search"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="20dp"/>
                                <TextView
                                    android:id="@+id/edit_search"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="뭐 먹지?"
                                    android:textColor="@color/black"
                                    android:textColorHint="#d7d7d7"
                                    android:textSize="14sp"
                                    android:background="@null"
                                    android:maxLines="1"
                                    android:layout_marginRight="10dp"
                                    android:inputType="text"
                                    android:maxLength="20"
                                    android:gravity="center_vertical"
                                    ></TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:id="@+id/layout_category_all"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                        <androidx.constraintlayout.utils.widget.ImageFilterView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_category_all"
                                            android:adjustViewBounds="true"
                                            android:padding="10dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/layout_category_chicken"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                        <androidx.constraintlayout.utils.widget.ImageFilterView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_category_chicken"
                                            android:adjustViewBounds="true"
                                            android:padding="10dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/layout_category_fastfood"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                        <androidx.constraintlayout.utils.widget.ImageFilterView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_category_fastfood"
                                            android:adjustViewBounds="true"
                                            android:padding="10dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/layout_category_snack"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                        <androidx.constraintlayout.utils.widget.ImageFilterView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_category_snack"
                                            android:adjustViewBounds="true"
                                            android:padding="10dp"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:id="@+id/layout_category_japan"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                        <androidx.constraintlayout.utils.widget.ImageFilterView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_category_japan"
                                            android:adjustViewBounds="true"
                                            android:padding="10dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/layout_category_korea"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                        <androidx.constraintlayout.utils.widget.ImageFilterView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_category_korea"
                                            android:adjustViewBounds="true"
                                            android:padding="10dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/layout_category_soup"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                        <androidx.constraintlayout.utils.widget.ImageFilterView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_category_soup"
                                            android:adjustViewBounds="true"
                                            android:padding="10dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/layout_category_meat"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                        <androidx.constraintlayout.utils.widget.ImageFilterView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_category_meat"
                                            android:adjustViewBounds="true"
                                            android:padding="10dp"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:id="@+id/layout_category_china"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                        <androidx.constraintlayout.utils.widget.ImageFilterView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_category_china"
                                            android:adjustViewBounds="true"
                                            android:padding="10dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/layout_category_noodle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                        <androidx.constraintlayout.utils.widget.ImageFilterView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_category_noodle"
                                            android:adjustViewBounds="true"
                                            android:padding="10dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/layout_category_desert"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                        <androidx.constraintlayout.utils.widget.ImageFilterView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_category_desert"
                                            android:adjustViewBounds="true"
                                            android:padding="10dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/layout_category_life"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                        <androidx.constraintlayout.utils.widget.ImageFilterView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_category_life"
                                            android:adjustViewBounds="true"
                                            android:padding="10dp"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txt_chat_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="동대문 채팅 커뮤니티!"
                                android:textSize="18sp"
                                android:fontFamily="@font/notosanscjkkr_bold_cus"
                                android:textColor="@color/black"
                                android:layout_marginTop="30dp"/>

                            <ImageView
                                android:id="@+id/img_chat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:layout_marginTop="10dp"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanscjkkr_bold_cus"
                                    android:text="한대봉 맛집 매장"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/txt_more"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:fontFamily="@font/notosanscjkkr_bold_cus"
                                    android:text="더보기"
                                    android:textColor="@color/contents_more"
                                    android:textSize="14sp"
                                    android:visibility="gone"/>
                            </RelativeLayout>
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/list_shop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.core.widget.NestedScrollView>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/main_navi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.drawerlayout.widget.DrawerLayout>